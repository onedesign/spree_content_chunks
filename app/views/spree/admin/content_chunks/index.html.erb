<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<div class='toolbar' data-hook="toolbar">
  <ul class='actions'>
    <li>
      <%= button_link_to "New Content Chunk", new_object_url, :icon => 'add', :id => 'admin_new_content_chunk_link'  %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1>Content Chunks</h1>

<table class="index sortable" id="content_chunks_listing" data-hook data-sortable-link="<%= update_positions_admin_content_chunks_url %>">
  <thead data-hook="admin_content_chunks_index_headers">
    <th>Title</th>
    <th>Kind</th>
    <th><%= t("action") %></th>
  </thead>
  <tbody>
    <% @content_chunks.each do |content_chunk|%>
      <tr id="<%= spree_dom_id content_chunk %>" data-hook="admin_content_chunks_index_rows">
        <td><span class="handle" style="margin-right:5px"> </span><%= content_chunk.title %></td>
        <td><%= content_chunk.kind %></td>
        <td>
          <%= link_to_edit content_chunk, :class => 'edit' %> &nbsp;
          <%= link_to_delete content_chunk %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
